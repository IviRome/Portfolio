<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:text="NUEVO TRATAMIENTO"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.722" />

        <ImageView
            android:id="@+id/icono_pills"
            android:layout_width="83dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/icono_pills"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.314"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_form_tratamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0"
            android:src="@drawable/content_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.004" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="90dp"
            app:contentPadding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/lbl_nombre_medicamento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Nombre del medicamento"
                        android:textStyle="italic" />
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/nombre_form_med"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:hint="NOMBRE"
                    android:inputType="textPersonName" />

                <android.support.v7.widget.CardView
                    android:id="@+id/lbl_dosis_medicamento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">

                    <TextView
                        android:id="@+id/txt_dosis_medicamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="¿Cuántas pastillas en cada toma?"
                        android:textStyle="italic" />
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/dosis_form_med"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:hint="DOSIS" />

                <android.support.v7.widget.CardView
                    android:id="@+id/lbl_tomas_medicamento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">

                    <TextView
                        android:id="@+id/txt_tomas_medicamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="¿Cuántas tomas al día?"
                        android:textStyle="italic" />
                </android.support.v7.widget.CardView>


                <EditText
                    android:id="@+id/tomas_form_med"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:hint="TOMAS POR DIA" />

                <android.support.v7.widget.CardView
                    android:id="@+id/lbl_duracion_medicamento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">

                    <TextView
                        android:id="@+id/txt_duracion_medicamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="¿Cuánto durá el tratamiento?"
                        android:textStyle="italic" />
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/duracion_form_med"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:ems="10"
                    android:hint="DURACIÓN" />

                <android.support.v7.widget.CardView
                    android:id="@+id/lbl_cuando_medicamento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">

                    <TextView
                        android:id="@+id/txt_cuando_medicamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="¿Con qué comida debe tomar la medicación?"
                        android:textStyle="italic" />
                </android.support.v7.widget.CardView>

                <CheckedTextView
                    android:id="@+id/check_desayuno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="DESAYUNO" />

                <CheckedTextView
                    android:id="@+id/check_comida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="COMIDA" />

                <CheckedTextView
                    android:id="@+id/check_cena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="CENA" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</ScrollView>